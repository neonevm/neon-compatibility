{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2019"],
    "types": ["node", "mocha", "chai"],
    "removeComments": true,
    "noImplicitAny": false,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types",
      "node_modules/web3/types",
      "node_modules/web3-bzz/types",
      "node_modules/web3-core/types",
      "node_modules/web3-core-helpers/types",
      "node_modules/web3-core-method/types",
      "node_modules/web3-core-promievent/types",
      "node_modules/web3-core-requestmanager/types",
      "node_modules/web3-core-subscriptions/types",
      "node_modules/web3-eth/types",
      "node_modules/web3-eth-abi/types",
      "node_modules/web3-eth-accounts/types",
      "node_modules/web3-eth-contract/types",
      "node_modules/web3-eth-ens/types",
      "node_modules/web3-eth-iban/types",
      "node_modules/web3-eth-personal/types",
      "node_modules/web3-net/types",
      "node_modules/web3-providers-http/types",
      "node_modules/web3-providers-ipc/types",
      "node_modules/web3-providers-ws/types",
      "node_modules/web3-shh/types",
      "node_modules/web3-utils/types",
      "node_modules/solc-typed-ast/dist",
      "node_modules/hardhat/types",
      "node_modules/ethers/lib"
    ],
    "outDir": "dist"
  },
  "include": ["./scripts", "./test", "./src/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["frameworks/hardhat-simple/hardhat.config.ts"]
}
